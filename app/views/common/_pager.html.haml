.pager
  - if collection.total_pages > 1
    .btn-group.pull-left
      = link_to url_for(params.merge(page: 1)), class: 'btn btn-default', disabled: collection.first_page? do
        %i.fa.fa-angle-double-left.fa-fw
      = link_to url_for(params.merge(page: collection.prev_page)), class: 'btn btn-default', disabled: collection.first_page? do
        %i.fa.fa-angle-left.fa-fw

    .btn-group.pull-right
      = link_to url_for(params.merge(page: collection.next_page)), class: 'btn btn-default', disabled: collection.last_page? do
        %i.fa.fa-angle-right.fa-fw
      = link_to url_for(params.merge(page: collection.total_pages)), class: 'btn btn-default', disabled: collection.last_page? do
        %i.fa.fa-angle-double-right.fa-fw
