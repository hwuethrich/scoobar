- current_nav ||= nil

%ul#customer-nav.nav.nav-tabs
  %li{:class => (current_nav == :overview ? 'active' : '')}
    = link_to 'Overview', customer

  %li{:class => (current_nav == :bookings ? 'active' : '')}
    = link_to 'Bookings', [customer, :bookings]

  %li{:class => (current_nav == :rentals ? 'active' : '')}
    = link_to 'Rentals', [customer, :rentals]
