- current_nav ||= nil

%ul#customer-nav.nav.nav-tabs
  %li{:class => (current_nav == :overview ? 'active' : '')}
    = link_to customer do
      = icon :eye, 'Details'

  %li{:class => (current_nav == :bookings ? 'active' : '')}
    = link_to [customer, :bookings] do
      = icon 'check-square-o', 'Bookings'

  %li{:class => (current_nav == :rentals ? 'active' : '')}
    = link_to [customer, :rentals] do
      = icon :gear, 'Rentals'
