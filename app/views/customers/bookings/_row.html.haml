- event = booking.event
- trip = booking.trip

%tr
  %td{:style => 'width: 150px'}
    %i.fa.fa-calendar
    = l event.start_time, format: :short
  %td
    - trip = booking.trip
    - if trip.code.present?
      .label.label-default{ :style => 'background-color: %s;' % trip.color }<
        = trip.code
    = trip.name
  %td
    - if event.night_dive?
      %small.text-muted<
        %i.fa.fa-moon-o
        night dive
  %td
    - if event.boat_dive?
      %small.text-muted<
        %i.fa.fa-anchor
        boat dive
  %td
    = link_to 'Delete', [customer, booking], method: :delete
