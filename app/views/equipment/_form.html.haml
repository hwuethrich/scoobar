= simple_form_for equipment do |f|
  = f.error_notification

  .form-inputs
    .row
      .col-sm-4
        = f.association :category
      .col-sm-8
        = f.input :name
    .row
      .col-sm-4
      .col-sm-8
        = f.input :comment

  %p.form-actions
    = f.button :submit
    = link_to 'Back', :back, class: 'btn btn-default'
