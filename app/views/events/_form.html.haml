= simple_form_for(event, html: { id: 'event-form' }) do |f|
  = f.error_notification

  .form-inputs
    .row
      .col-xs-12.col-sm-4
        = f.association :trip, collection: Trip.alphabetical
      .col-sm-6
        = f.input :name
      .col-sm-2
        = f.input :night_dive, as: :select, include_blank: false
    .row
      .col-xs-8.col-sm-2
        = f.input :start_time
      .col-xs-4.col-sm-2
        = f.input :duration, as: :numeric
      .col-xs-4.col-sm-2
        = f.association :boat, collection: Boat.alphabetical
      .col-sm-6
        = f.input :description

  %p.form-actions
    = f.button :submit
    = link_to t(:back), :back, class: 'btn btn-default'
