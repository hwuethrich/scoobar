= render 'events_header', mode: :list

%p
  .row
    .col-xs-4.text-left
      .btn-group
        = link_to url_for(date: current_day - 1.week), class: 'btn btn-default' do
          %i.fa.fa-angle-double-left.fa-fw
        = link_to url_for(date: current_day - 1.day), class: 'btn btn-default' do
          %i.fa.fa-angle-left.fa-fw

    .col-xs-4.text-center
      - unless current_day.today?
        .btn-group
          = link_to url_for(date: Date.today), class: 'btn btn-default' do
            %i.fa.fa-bullseye
            Today

    .col-xs-4.text-right
      .btn-group
        = link_to url_for(date: current_day + 1.day), class: 'btn btn-default' do
          %i.fa.fa-angle-right.fa-fw
        = link_to url_for(date: current_day + 1.week), class: 'btn btn-default' do
          %i.fa.fa-angle-double-right.fa-fw
.row
  .col-sm-4
    = render 'day_panel', date: current_day - 1.day
  .col-sm-4
    = render 'day_panel', date: current_day
  .col-sm-4
    = render 'day_panel', date: current_day + 1.day
