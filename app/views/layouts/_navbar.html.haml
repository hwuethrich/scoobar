%nav.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header

      %button.navbar-toggle(type='button' data-toggle='collapse' data-target='#main-nav')
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar

      = link_to '/', class: 'navbar-brand' do
        %i.fa.fa-tint.text-info
        SCOOBAR

    #main-nav.collapse.navbar-collapse
      %ul.nav.navbar-nav

        // CUSTOMERS NAV

        %li.dropdown{class: navbar_item_state(:customers)}

          %a.dropdown-toggle{href: '#', role: 'button', data: { toggle: 'dropdown' }}
            = icon :users, t('.customers.title')
            %span.caret

          %ul.dropdown-menu{role: 'menu'}
            %li
              = link_to :customers do
                = icon 'clock-o', t('.customers.recent')

            %li.divider

            %li
              = link_to [:new, :customer] do
                = icon 'plus-circle', t('.customers.add')

        // EVENTS NAV

        %li.dropdown{class: navbar_item_state(:events)}

          %a.dropdown-toggle{href: '#', role: 'button', data: { toggle: 'dropdown' }}
            = icon :calendar, t('.events.title')
            %span.caret

          %ul.dropdown-menu{role: 'menu'}
            %li
              = link_to :events do
                = icon :list, t('.events.list')
            %li
              = link_to [:events, :calendar] do
                = icon :calendar, t('.events.calendar')

            %li.divider

            %li
              = link_to [:new, :event] do
                = icon 'plus-circle', t('.events.add')

        // ADMIN NAV

        %li.dropdown{class: navbar_item_state(:admin)}

          %a.dropdown-toggle{href: '#', role: 'button', data: { toggle: 'dropdown' }}
            = icon :wrench, t('.admin.title')
            %span.caret

          %ul.dropdown-menu{role: 'menu'}
            %li
              = link_to :trips do
                = icon :compass, t('.admin.trips')
            %li
              = link_to :boats do
                = icon :anchor, t('.admin.boats')
            %li
              = link_to :guides do
                = icon :star, t('.admin.guides')
            %li
              = link_to [:equipment, :index] do
                = icon :cog, t('.admin.equipment')

            %li.divider

            %li
              = link_to :statistics do
                = icon 'bar-chart', t('.admin.statistics')

      = form_tag :customers, method: :get, id: 'customer-search', class: 'navbar-form navbar-right', role: 'search' do
        .form-group
          .input-group
            = text_field_tag :search, '', class: 'form-control', placeholder: 'Search Customer'
            %span.input-group-btn
              %button.btn.btn-info.btn-search{type: 'submit'}
                = icon :search
